<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.polyfast"
    android:targetSandboxVersion="2"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="29" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="androidx.multidex.MultiDexApplication"
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:icon="@drawable/polifast"
        android:label="@string/app_name"
        android:roundIcon="@drawable/polifast"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.polyfast.forumManager.FullImageView"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_full_image_view"
            android:theme="@style/FullscreenTheme" />
        <activity android:name="com.example.polyfast.forumManager.AskQuestion" />
        <activity android:name="com.example.polyfast.forumManager.QuestionDetail" />
        <activity android:name="com.example.polyfast.Activities.DownloadedFile" />
        <activity
            android:name="com.example.polyfast.Activities.PlateForm"
            android:label="@string/title_activity_plate_form"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.example.polyfast.Activities.Reset_Password" />
        <activity android:name="com.example.polyfast.Activities.Sing_in_sind_up" />
        <activity android:name="com.example.polyfast.Activities.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name="com.google.firebase.components.ComponentDiscoveryService"
            android:directBootAware="true"
            android:exported="false" >
            <meta-data
                android:name="com.google.firebase.components:com.google.firebase.firestore.FirestoreRegistrar"
                android:value="com.google.firebase.components.ComponentRegistrar" />
            <meta-data
                android:name="com.google.firebase.components:com.google.firebase.storage.StorageRegistrar"
                android:value="com.google.firebase.components.ComponentRegistrar" />
        </service>

        <activity
            android:name="com.google.android.gms.common.api.GoogleApiActivity"
            android:exported="false"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />

        <provider
            android:name="com.google.firebase.provider.FirebaseInitProvider"
            android:authorities="com.example.polyfast.firebaseinitprovider"
            android:exported="false"
            android:initOrder="100" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <provider
            android:name="androidx.lifecycle.ProcessLifecycleOwnerInitializer"
            android:authorities="com.example.polyfast.lifecycle-process"
            android:exported="false"
            android:multiprocess="true" />
    </application>

</manifest>