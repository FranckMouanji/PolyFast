<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/question_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        android:text="New to Material Design? Get started with this introduction to our guidelines."
        android:textColor="@color/dark"
        android:textSize="17sp"
        android:textStyle="bold" />

    <View
        android:layout_marginTop="8dp"
        android:background="@color/darkLight"
        android:layout_width="match_parent"
        android:layout_height="1px" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:paddingHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/push_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_date"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Lundi 20 Avril 2020 à 13:14"
            android:textColor="@color/colorPrimary"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/push_author"
            app:layout_constraintTop_toTopOf="@+id/push_author" />

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_account" />

        <TextView
            android:id="@+id/last_author"
            style="@android:style/TextAppearance.Material.Notification.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Ronald Tchuekou"
            android:textColor="@color/colorPrimary"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/avatar"
            app:layout_constraintTop_toTopOf="@+id/avatar"
            tools:ignore="NewApi" />

        <TextView
            android:id="@+id/push_author"
            style="@android:style/TextAppearance.Material.Notification.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:drawableStart="@drawable/ic_push"
            android:drawablePadding="-8dp"
            android:drawableTint="@color/dark"
            android:text="Mouaji Loïc"
            android:textColor="@color/colorPrimary"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/avatar"
            app:layout_constraintTop_toBottomOf="@+id/last_author"
            tools:ignore="NewApi" />

        <TextView
            android:id="@+id/last_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_date"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Samedi 07 Main 2020 à 12:12"
            android:textColor="@color/colorPrimary"
            android:textSize="13sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/last_author"
            app:layout_constraintTop_toTopOf="@+id/last_author" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/question_description"
        android:paddingHorizontal="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/dark"
        android:textSize="17sp"
        android:text="We've provided a new RecyclerView adapter in the staggeredgridlayout package which displays an asymmetric staggered card layout, meant to scroll horizontally. Feel free to dig into that code on your own, but we will not go over how it's implemented here.  In order to use this new adapter, modify your onCreateView() method in ProductGridFragment.java. Replace the code block after the &quot;set up the RecyclerView&quot; comment with the following:" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/contentImage1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:strokeWidth="1dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:cardMaxElevation="5dp"
        android:layout_marginTop="7dp"
        app:strokeColor="@color/colorAccent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image1"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:contentDescription="image1"
                app:srcCompat="@drawable/side_nav_bar" />

            <TextView
                android:id="@+id/imageDescription1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingHorizontal="5dp"
                android:text="Dans cette image se trouve l'énoncé de l'exercice en question."
                />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/contentImage2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_margin="10dp"
        app:strokeWidth="1dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:cardMaxElevation="5dp"
        app:strokeColor="@color/colorAccent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image2"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:contentDescription="image2"
                app:srcCompat="@drawable/side_nav_bar" />

            <TextView
                android:id="@+id/imageDescription2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingHorizontal="5dp"
                android:text="Build and run. The product grid items should now be staggered:" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/text_set_response"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/responses_section"
        android:textSize="18sp"
        android:padding="10dp"
        android:textColor="@color/white"
        android:background="@color/colorAccentLight"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="@color/darkLight"/>

</LinearLayout>